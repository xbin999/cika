.row
  .index
    - @books.each do |book|
      .book.col-sm-3.small
        = link_to image_tag(qiniu_image_path(book.cover.url, :thumbnail => '130x130>')), book_path(book)
        %br
        = link_to truncate(book.name, length:24), book_path(book)
  
%br   
#static-pagination
  = will_paginate @books