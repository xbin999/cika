.index

  - mycards.each_slice(4) do |rows|
    .row
      - rows.each do |cards|
        .subjectwrap

          #cover.col-sm-1
            - if cards.book != nil
              = link_to image_tag(qiniu_image_path(cards.book.cover.url, :thumbnail => '75x75>')), book_path(cards.book_id)

          .info.col-sm-2.small
            %a{:href => event_user_words_path(cards.id)}#{truncate(cards.words, length:24)}
    %br

%br
