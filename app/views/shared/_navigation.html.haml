%nav.navbar.navbar-default.navbar-fixed-top
  .container
    %ul.nav.navbar-nav.pull-left
      %li= link_to "首页", root_path
      %li
        .nav-search.form.form-inline
          = simple_form_for :search, :url => search_path, :method => :get do |f|
            = f.input :name, as: :string, placeholder: "书名", label: false, input_html: {class:  'form-control'}
            = f.button :button, class: "btn navbar-btn" do
              %span.glyphicon.glyphicon-search{"aria-hidden" => "true"}
      %li= link_to "阅读", books_path
      %li= link_to "词卡", translate_path
      %li= link_to "测试", "http://testyourvocab.com/", :target => "_blank"

    %ul.nav.navbar-nav.pull-right
      %li
        = link_to new_book_path, class: "btn btn-default" do
          %i.glyphicon.glyphicon-plus 新书

      %li
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :role => "button"}
              = current_user.name
              %span.caret
            %ul.dropdown-menu
              %li= link_to "账户", edit_user_registration_path
              %li.divider{:role => "separator"}
              %li= link_to "退出", destroy_user_session_path, method: :delete
        -else
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :role => "button"}
              账户
              %span.caret
            %ul.dropdown-menu
              %li= link_to "注册", new_user_registration_path
              %li= link_to "登录", new_user_session_path